# Convex
# Get this from running: npx convex dev
NEXT_PUBLIC_CONVEX_URL=

# Payload CMS
PAYLOAD_SECRET=your-secret-key-min-32-chars-here

# Database (production - leave empty for local SQLite in dev)
# For Neon: Create free database at https://neon.tech and copy connection string
DATABASE_URL=

# Site
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin Access (for /admin/intakes route)
# Generate with: openssl rand -hex 32
ADMIN_ACCESS_TOKEN=

# Seed Script Configuration
# Admin user is ONLY created when BOTH vars are set
# Otherwise, use /admin first-run flow to create admin
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=

# Set to 1 to allow external image downloads during seed (dev only)
# Default: 0 (use local images from /public/images/demo/)
SEED_ALLOW_EXTERNAL=0

# Translation Service
# Options: 'openai' | 'deepl' | 'placeholder'
TRANSLATION_PROVIDER=placeholder

# For OpenAI translation (when TRANSLATION_PROVIDER=openai)
# OPENAI_API_KEY=sk-...

# For DeepL translation (when TRANSLATION_PROVIDER=deepl)
# Free API keys end with :fx, Pro keys don't
# DEEPL_API_KEY=...
